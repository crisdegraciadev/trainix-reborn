datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String @id @unique @default(uuid())
  name         String
  surname      String
  email        String @unique
  passwordHash String

  exercises Exercise[]
  workout   Workout[]
}

model Exercise {
  id          String  @id @unique @default(uuid())
  name        String  @unique
  description String? @db.Text

  muscles    Muscle[]
  activities WorkoutActicity[]

  User   User   @relation(fields: [userId], references: [id])
  userId String

  difficulty   Difficulty @relation(fields: [difficultyId], references: [id])
  difficultyId String

  @@index([userId])
  @@index([difficultyId])
}

model Workout {
  id          String  @id @unique @default(uuid())
  name        String  @unique
  description String? @db.Text

  muscles      Muscle[]
  progressions WorkoutProgression[]

  user   User   @relation(fields: [userId], references: [id])
  userId String

  difficulty   Difficulty @relation(fields: [difficultyId], references: [id])
  difficultyId String

  @@index([userId])
  @@index([difficultyId])
}

model WorkoutProgression {
  id String @id @unique @default(uuid())

  workout   Workout @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  workoutId String

  activities WorkoutActicity[]

  @@index([workoutId])
}

model WorkoutActicity {
  id String @id @unique @default(uuid())

  order   Int
  sets    Int
  reps    Int
  improve Boolean?

  workoutProgression   WorkoutProgression @relation(fields: [workoutProgressionId], references: [id], onDelete: Cascade)
  workoutProgressionId String
  exercise             Exercise           @relation(fields: [exerciseId], references: [id])
  exerciseId           String

  @@index([workoutProgressionId])
  @@index([exerciseId])
}

model Muscle {
  id    String @id @unique @default(uuid())
  name  String @unique
  value String @unique

  exercises Exercise[]
  workouts  Workout[]
}

model Difficulty {
  id    String @id @unique @default(uuid())
  name  String @unique
  value String @unique
  level Int    @unique

  exercises Exercise[]
  workouts  Workout[]
}
