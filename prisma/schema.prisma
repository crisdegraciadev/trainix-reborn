datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String @id @unique @default(uuid())
  name         String
  surname      String
  email        String @unique
  passwordHash String

  exercises Exercise[]
  workout   Workout[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Exercise {
  id          String  @id @unique @default(uuid())
  name        String  @unique
  description String? @db.Text

  muscles    Muscle[]
  activities WorkoutActicity[]

  User   User   @relation(fields: [userId], references: [id])
  userId String

  difficulty   Difficulty @relation(fields: [difficultyId], references: [id])
  difficultyId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([difficultyId])
}

model Workout {
  id          String  @id @unique @default(uuid())
  name        String  @unique
  description String? @db.Text

  muscles      Muscle[]
  progressions WorkoutProgression[]

  user   User   @relation(fields: [userId], references: [id])
  userId String

  difficulty   Difficulty @relation(fields: [difficultyId], references: [id])
  difficultyId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([difficultyId])
}

model WorkoutProgression {
  id String @id @unique @default(uuid())

  workout   Workout? @relation(fields: [workoutId], references: [id])
  workoutId String

  workSets WorkoutActicity[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([workoutId])
}

model WorkoutActicity {
  id String @id @unique @default(uuid())

  order Int
  sets  Int
  reps  Int

  workoutProgression   WorkoutProgression? @relation(fields: [workoutProgressionId], references: [id])
  workoutProgressionId String
  exercise             Exercise            @relation(fields: [exerciseId], references: [id])
  exerciseId           String

  @@index([workoutProgressionId])
  @@index([exerciseId])
}

model Muscle {
  id    String @id @unique @default(uuid())
  name  String @unique
  value String @unique

  exercises Exercise[]
  workouts  Workout[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Difficulty {
  id    String @id @unique @default(uuid())
  name  String @unique
  value String @unique
  level Int    @unique

  exercises Exercise[]
  workouts  Workout[]
}
